@model Recipe
@{
    ViewBag.Title = $"{Model.DishName} by {@Model.Author} - iCOOK";
}

@*<div class="panel panel-success text-center">*@
    @*<div class="panel-heading text-center"><h2>@Model.DishName</h2></div>*@
    @*<div class="card card-outline-primary w-50 m-1 p-1 d-inline-block">*@
    <div class="card border-info mb-3 w-50 align-self-center mr-auto ml-auto" >
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="~/images/@Model.ImagePath" class="card-img" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h4 class="card-title">@Model.DishName</h4>
                    <p class="card-text">@Model.BriefIntro</p>
                    <p class="card-text">
                        <small class="text-muted">
                            <i class="fas fa-user-circle"></i>@Model.Author
                        </small>
                    </p>
                    <form>
                        <button class="btn btn-info" asp-action="ReviewRecipe">Add Review</button>
                    </form>
                </div>
            </div>
        </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div>Serving: @Model.Servings</div>
                    <div>Prepare Time: @Model.PrepTime</div>
                </li>
                <li class="list-group-item">
                    Ingredients<br />
                    @Model.Ingredients
                </li>
                <li class="list-group-item">
                    Directions<br />
                    @Model.Directions
                </li>
            </ul>
    </div>
