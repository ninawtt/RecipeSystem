@model Recipe
@{
    ViewBag.Title = "View Recipe - iCOOK";
}

<div class="panel panel-success text-center">
    <div class="panel-heading text-center"><h2>@Model.DishName</h2></div>
    <div class="card card-outline-primary w-50 m-1 p-1 d-inline-block">
        <div c>
            <img id="dishPic" src="~/images/@Model.ImagePath" />
        </div>
        <div class="bg-faded p-1">
            <small>@Model.Author</small>
        </div>
        <span class="card-text p-1">
            @Model.BriefIntro
        </span>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div>Serving: @Model.Servings</div>
                <div>Prepare Time: @Model.PrepTime</div>
            </li>
            <li class="list-group-item">
                Ingredients<br />
                @Model.Ingredients
            </li>
            <li class="list-group-item">
                Directions<br />
                @Model.Directions
            </li>
        </ul>
    </div>


</div>
