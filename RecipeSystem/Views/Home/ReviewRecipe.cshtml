@model Review
@{
    ViewBag.Title = "Review Recipe - iCOOK";
}

<div class="text-center"><h2>Add your review</h2></div>
<div class="panel-body align-content-center m-5">
    <form class="p-a-l" asp-action="ReviewRecipe" method="post">
        <div asp-validation-summary="All" class="alert-danger"></div>
        <input type="hidden" asp-for="ReviewTime" value="@DateTime.Now" />
        <div class="form-group">
            <label asp-for="Name">Your Name</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Score">Score</label>
            <input class="form-control" type="number" min="1" max="5" asp-for="Score" />
        </div>
        <div class="form-group">
            <label asp-for="Comment">Leave your comment</label>
            <input type="text" class="form-control" asp-for="Comment" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Add Review</button>
        </div>
    </form>
</div>