@model IEnumerable<Recipe>
@{
    ViewBag.Title = "All Recipes";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm text-center">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Author</th>
        <th>Actions</th>
    </tr>
    @foreach (Recipe r in Model)
    {
        <tr>
            <td>@r.RecipeID</td>
            <td>@r.DishName</td>
            <td>@r.Author</td>
            <td>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="RecipeID" value="@r.RecipeID" />

                    <a asp-action="Update" class="btn btn-sm btn-warning"
                       asp-route-RecipeID="@r.RecipeID"><i class="far fa-edit" style="color: white;"></i></a>

                    <button type="submit" class="btn btn-sm btn-danger">
                        <i class="far fa-trash-alt"></i>
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Create" class="btn btn-sm btn-primary">Add Recipe</a>
</div>
