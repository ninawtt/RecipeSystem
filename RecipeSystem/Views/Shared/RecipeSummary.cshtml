@model Recipe

<div class="card card-outline-primary m-1 p-1 d-inline-block">
    <div class="bg-faded p-1">
        <img id="dishPic" src="~/images/@Model.ImagePath" />
    </div>
    <div class="bg-faded p-1">
        <h4>
            @Model.DishName
        </h4>
        <small>by @Model.Author</small>
    </div>

    <form id="@Model.RecipeID" asp-action="ViewRecipe"
          asp-controller="Home" method="post">
        <input type="hidden" asp-for="RecipeID" />
        <span class="card-text p-1">
            @Model.BriefIntro
            <button type="submit"
                    class="btn btn-success btn-sm pull-right"
                    style="float: right">
                View Recipe
            </button>
        </span>
    </form>

</div>
