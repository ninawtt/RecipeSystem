@model Recipe

    <div asp-validation-summary="All" class="alert-danger"></div>
    <div class="form-group">
        <label asp-for="DishName">Dish Name</label>
        <input class="form-control" asp-for="DishName" />
    </div>
    <div class="form-group">
        <label asp-for="Author">Your Name</label>
        <input class="form-control" asp-for="Author" />
    </div>
    <div class="form-group">
        <label asp-for="BriefIntro">Brief Introduction</label>
        <textarea class="form-control" style="height:100px;" asp-for="BriefIntro"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PrepTime">Prepare Time</label>
        <input class="form-control" type="number" min="1" asp-for="PrepTime" /> min
    </div>
    <div class="form-group">
        <label asp-for="Servings">Servings</label>
        <input class="form-control" type="number" min="1" max="10" asp-for="Servings" /> Servings
    </div>
    <div class="form-group">
        <label asp-for="Ingredients">Ingredients</label>
        <textarea class="form-control" style="height:100px;" asp-for="Ingredients"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Directions">Directions</label>
        <textarea class="form-control" style="height:100px;" asp-for="Directions"></textarea>
    </div>
