@model Recipe

    @*<div asp-validation-summary="All" class="alert-danger"></div>*@
    <div class="form-group">
        <label asp-for="DishName">Dish Name</label>
        <div><span asp-validation-for="DishName" class="text-danger"></span></div>
        <input class="form-control" asp-for="DishName" />
    </div>
    <div class="form-group">
        <label asp-for="Author">Your Name</label>
        <div><span asp-validation-for="Author" class="text-danger"></span></div>
        <input class="form-control" asp-for="Author" />
    </div>
    <div class="form-group">
        <label asp-for="BriefIntro">Brief Introduction</label>
        <div><span asp-validation-for="BriefIntro" class="text-danger"></span></div>
        <textarea class="form-control" style="height:100px;" asp-for="BriefIntro"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PrepTime">Prepare Time</label>
        <div><span asp-validation-for="PrepTime" class="text-danger"></span></div>
        <input class="form-control" type="number" min="1" asp-for="PrepTime" /> min
    </div>
    <div class="form-group">
        <label asp-for="Servings">Servings</label>
        <div><span asp-validation-for="Servings" class="text-danger"></span></div>
        <input class="form-control" type="number" min="1" asp-for="Servings" /> Servings
    </div>
    <div class="form-group">
        <label asp-for="Ingredients">Ingredients</label>
        <div><span asp-validation-for="Ingredients" class="text-danger"></span></div>
        <textarea class="form-control" style="height:100px;" asp-for="Ingredients"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Directions">Directions</label>
        <div><span asp-validation-for="Directions" class="text-danger"></span></div>
        <textarea class="form-control" style="height:100px;" asp-for="Directions"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ImagePath">Image</label>
        <div><span asp-validation-for="ImagePath" class="text-danger"></span></div>
        <input type="file" name="files" class="form-control" />
    </div>
